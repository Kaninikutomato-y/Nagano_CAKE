<h4>配送先編集</h4>
	<% if @delivery.errors.any? %>
		<div class="alert alert-danger">
			<h4><%= @delivery.errors.count %>件のエラーがあります。</h4>
			<ul>
				<% @delivery.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
<%= form_for(@delivery) do |f| %>
	<div class="field">
		<%= f.label :郵便番号（ハイフンなし） %>
		<%= f.text_field :postcode %>
	</div>
	<div class="field">
		<%= f.label :住所 %>
		<%= f.text_field :address %>
	</div>
	<div class="field">
		<%= f.label :宛名 %>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.submit '編集する', class: "btn btn-success" %>
	</div>
<% end %>
