<h4>配送先登録/一覧</h4>
<%= form_for(@delivery) do |f| %>
	<div class="field">
		<%= f.label :郵便番号（ハイフンなし） %>
		<%= f.text_field :postcode %>
	</div>
	<div class="field">
		<%= f.label :住所 %>
		<%= f.text_field :address %>
	</div>
	<div class="field">
		<%= f.label :宛名 %>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.submit '登録する', class: "btn btn-success" %>
	</div>
<% end %>


<table border="1">
	<thead>
		<tr bgcolor="gray">
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th colspan=""></th>
		</tr>
	</thead>
	<% @deliveries.each do |delivery| %>
		<tbody>
			<tr>
				<td><%= delivery.postcode %></td>
				<td><%= delivery.address %></td>
				<td><%= delivery.name %></td>
				<td>
					<%= link_to '編集する', edit_delivery_path(delivery), class: "btn btn-primary" %>
					<%= link_to '削除する', delivery_path(delivery), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-danger" %>
				</td>
			</tr>
		</tbody>
	<% end %>
</table>
