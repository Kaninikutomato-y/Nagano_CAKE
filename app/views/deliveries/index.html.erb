<div class="container">
	<div class="row">
		<h2>配送先登録 / 一覧</h2>
			<% if @delivery.errors.any? %>
				<div class="alert alert-danger">
					<h4><%= @delivery.errors.count %>件のエラーがあります。</h4>
					<ul>
						<% @delivery.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

		<%= form_for(@delivery) do |f| %>
		<table>
				<tr>
					<td><%= f.label :郵便番号（ハイフンなし） %></td>
					<td><%= f.text_field :postcode %></td>
				</tr>
				<tr>
					<td><%= f.label :住所%></td>
					<td><%= f.text_field :address, class: "hogehoge", size: "70x50" %></td>
				</tr>
				<tr>
					<td><%= f.label :宛名 %></td>
					<td><%= f.text_field :name %></td>
					<td><%= f.submit '登録する', class: "btn btn-success" %>
					</td>
				</tr>

		</table>
		<% end %>
	</div>

	<div class="row">
		<div class="col-mt-1">
			<table  style="text-align: center;  font-size: 16px;">
				<thead  style="background-color: #FFF2DF;">
					<tr style="border-bottom: solid 2px gray;">
						<th class="col-lg-2" style="text-align: center;">郵便番号</th>
						<th class="col-lg-2" style="text-align: center;">住所</th>
						<th class="col-lg-2" style="text-align: center;">宛名</th>
						<th colspan=""></th>
					</tr>
				</thead>
				<% @deliveries.each do |delivery| %>
					<tbody>
						<tr style="border-bottom: solid 2px gray">
							<td><%= delivery.postcode %></td>
							<td><%= delivery.address %></td>
							<td><%= delivery.name %></td>
							<td>
								<%= link_to '編集する', edit_delivery_path(delivery), class: "btn btn-primary btn-sm" %>
								<%= link_to '削除する', delivery_path(delivery), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-danger btn-sm" %>
							</td>
						</tr>
					</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>
