<h2>登録情報編集</h2>
<% if @client.errors.any? %>
  <div class="alert alert-danger">
    <h4><%= @client.errors.count %>件のエラーがあります。</h4>
    <ul>
      <% @client.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@client) do |f| %>

 <div class="field">
    <%= f.label :名前 %>
    <span>（姓）</span><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <span>（名）</span><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    <span>（セイ）</span><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <span>（メイ）</span><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="actions">
    <%= f.submit "登録内容を保存する" %>
    <% if client_signed_in? && @client.id == current_client.id %>
      <%= link_to '退会する', unsubscribe_client_path(@client), class: "btn btn-danger" %>
    <% end %>
  </div>

<% end %>