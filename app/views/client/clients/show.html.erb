
<div class="container">
  <div class="row">
    <h2>マイページ</h2>
      <div class="col-mt-2">
        <h4>登録情報
        <%= link_to '編集する', edit_client_path, class: "btn btn-primary btn-sm" %>
        <%= link_to 'パスワードを変更する', "#", class: "btn btn-primary btn-sm" %>
        </h4>
      </div>
  </div>

  <div class="row">
    <div class="col-mt-2">
    <table border="1">
        <tr>
          <td class="client_a">氏名</td>
          <td class="client_b"><%= @client.last_name %> <%= @client.first_name %></td>
        </tr>
        <tr>
          <td class="client_a">カナ</td>
          <td class="client_b"><%= @client.last_name_kana %> <%= @client.first_name_kana %></td>
        </tr>
        <tr>
          <td class="client_a">郵便番号</td>
          <td class="client_b"><%= @client.postcode %></td>
        </tr>
        <tr>
          <td class="client_a">住所</td>
          <td class="client_b"><%= @client.address %></td>
        </tr>
        <tr>
          <td class="client_a">電話番号</td>
          <td class="client_b"><%= @client.phone_number %></td>
        </tr>
        <tr>
          <td class="client_a">メールアドレス</td>
          <td class="client_b"><%= @client.email %></td>
        </tr>
    </table>
    </div>
  </div>

  <div class="row">
    <div class="col-mt-2">
      <table>
        <tr>
          <td><h4>配送先</h4></td>
          <td><%= link_to '一覧を見る', deliveries_path, class: "btn btn-primary" %></td>
        </tr>
        <tr>
          <td><h4>注文履歴</h4></td>
          <td><%= link_to '一覧を見る', orders_path, class: "btn btn-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>