<div class="row" style="margin: 0 0 30px 200px;">
  <h2>新規会員登録</h2>
</div>

<div class="row" style="font-size: 16px; margin: 20px 0;">
  <div class="col-lg-1"></div>
  <div class="col-lg-10">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "client/clients/shared/error_messages", resource: resource %>

     <div class="field row" style="margin-bottom: 10px">
        <%= f.label :名前, class: "col-lg-3" %>
        <div class="col-lg-9">
          <span style="padding-right: 15px;">（姓）</span><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
          <span style="padding-right: 16px;">（名）</span><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>
      </div>

      <div class="field row" style="margin-bottom: 10px">
        <%= f.label :フリガナ, class: "col-lg-3" %>
        <div class="col-lg-9">
          <span>（セイ）</span><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
          <span>（メイ）</span><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </div>
      </div>

      <div class="field row" style="margin-bottom: 10px">
        <%= f.label :メールアドレス, class: "col-lg-3" %>
        <div class="col-lg-9" style="padding-left: 78px;" >
          <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 410px" %>
        </div>
      </div>

      <div class="field row" style="margin-bottom: 10px">
        <%= f.label :郵便番号（ハイフンなし）, class: "col-lg-3" %>
        <div class="col-lg-9" style="padding-left: 78px;">
          <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
        </div>
      </div>

      <div class="field row" style="margin-bottom: 10px">
        <%= f.label :住所, class: "col-lg-3" %>
        <div class="col-lg-9" style="padding-left: 78px;">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", style: "width: 410px"  %>
        </div>
      </div>

      <div class="field row" style="margin-bottom: 10px">
        <%= f.label :電話番号（ハイフンなし）, class: "col-lg-3" %>
        <div class="col-lg-9" style="padding-left: 78px;">
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
        </div>
      </div>

      <div class="field row" style="margin-bottom: 10px">
        <%= f.label :パスワード（６文字以上）, class: "col-lg-3" %>
        <div class="col-lg-9" style="padding-left: 78px;">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="field row" style="margin-bottom: 30px">
        <%= f.label :パスワード（確認用）, class: "col-lg-3" %>
        <div class="col-lg-9" style="padding-left: 78px;">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="actions" style="text-align: center;">
        <%= f.submit "新規登録", class: "btn-lg btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="col-lg-1"></div>
</div>
<div class="row" style="margin: 0 0 30px 200px; font-size: 18px;">
  <h2 style="margin-bottom: 30px;">既に登録済みの方</h2>
  <span style="padding-left: 200px;"><%= link_to 'こちら', new_client_session_path, style: "font-size: 22px;" %>からログインしてください</span>
</div>