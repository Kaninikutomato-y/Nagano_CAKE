<h4>注文履歴一覧</h4>

<table>
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |oreder| %>
			<tr>
				<td><%= order.created_at %></td>
				<td>
					<%= order.postcode %><br>
					<%= order.address %><br>
					<%= order.name %>
				</td>
				<td>
					<% sum_all = 0 %>
					<% order.order_items.each do |order_item| %>
					<%= order_item.product.name %>
					<% sub_totall = price_include_tax(order_item.price).to_i * order_item.quantity %>
					<% sum_all += sub_total.to_i %>
					<% end %>
				</td>
				<td><%= sum_all += order.freight.to_i %>円</td>
				<td><%= ststus(order) %></td>
				<td><%= link_to '表示する', order_path(order), class: 'btn btn-success' %></td>
			</tr>
		<% end %>
	</tbody>
</table>