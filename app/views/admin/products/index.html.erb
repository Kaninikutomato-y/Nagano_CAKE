<h2>商品一覧(admin画面)</h2>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>販売ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= link_to  product.name, admin_product_path(product) %></td>
        <td><%= product.price.to_s(:delimited) %></td>
        <td><%= product.genre.name %></td>
        <td><% if product.sale_status == true %>販売中
            <% else %>売り切れ
            <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>