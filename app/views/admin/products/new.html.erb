<h2>商品新規登録</h2>
<%= form_for @product,:url => {controller: "products", action: "create"} do |f| %>
  <div class="field">
      <%= f.attachment_field :image %>
  </div>
  <div class="field">
      <%= f.label :商品名 %>
      <%= f.text_field :name %>
  </div>
  <div class="field">
      <%= f.label :商品説明 %>
      <%= f.text_area :explanation %>
  </div>
  <div class="field">
      <%= f.label :ジャンル %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択して下さい --" %>
  </div>
  <div class="field">
      <%= f.label :税抜き価格 %>
      <%= f.text_field :price %>円
  </div>
  <div class="field">
      <%= f.label :販売ステータス %>
      <%= f.select :sale_status, [["販売中", "true"], ["売り切れ", "false"]], include_blank: "-- 選択して下さい --" %>
  </div>
  <div class="field">
      <%= f.submit "新規登録", class: "btn btn-primary" %>
  </div>
  <% end %>

