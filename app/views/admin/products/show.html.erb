<div class="row">

  <div class="aps-block">
    <h2 class="aps-h2">商品詳細</h2>
    <div class="aps-img col-lg-7">
      <%= attachment_image_tag @product, :image ,style: "width: 480px; height: 270px;" %>
    </div>

    <div class="product-box col-lg-5">
      <div class="v_line_left">
        <table>
            <tr>
              <th class="aps-th">商品名</td>
              <td class="aps-td"><%= @product.name %></td>
            </tr>
            <tr>
              <th class="aps-th">商品説明</td>
              <td class="aps-td"><%= @product.explanation %></td>
            </tr>
            <tr>
              <th class="aps-th">ジャンル</td>
              <td class="aps-td"><%= @product.genre.name %></td>
            </tr>
            <tr>
              <th class="aps-th">税込価格<br>(税抜価格)</td>
              <td class="aps-td"><%= price_tax(@product.price).to_s(:delimited) %>(<%= @product.price.to_s(:delimited) %>)円</td>
            </tr>
            <tr>
              <th class="aps-th">販売ステータス</td>
              <td class="aps-td"><% if @product.sale_status == true %>販売中
                  <% else %>売り切れ
                  <% end %></td>
            </tr>
        </table>
      </div>
    </div>

    <div class="aps-btn">
      <%= link_to "編集する", edit_admin_product_path(@product), class: "btn btn-primary" %>
    </div>
  </div>
</div>