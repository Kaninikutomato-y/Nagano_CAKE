<h2><%= @client.last_name %><%= @client.first_name %>さんの会員詳細</h2>

<table border="1">
    <tr>
      <td>顧客ID</td>
      <td><%= @client.id %>
        <% if @client.is_deleted == true %>有効会員
        <% else %>退会済み
        <% end %>
      </td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @client.last_name %> <%= @client.first_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @client.last_name_kana %> <%= @client.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @client.postcode %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @client.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @client.phone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @client.email %></td>
    </tr>
</table>

  <table>
    <tr>
      <td>
      <%= link_to '編集する', edit_client_path, class: "btn btn-primary" %>
      </td>
      <td><h4>注文履歴</h4></td>
      <td><%= link_to '一覧を見る', orders_path, class: "btn btn-primary" %></td>
    </tr>
  </table>
  


