<h4>注文履歴一覧</h4>
<table>
	<thead>
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td>
				<%= link_to admin_order_path(order) do %>
					<%= order.created_at.to_s(:datetime_jp) %>
				<% end %>
			</td>
			<td><%= order.name %></td>
			<td>
				<% sum_all = 0 %>
				<% order.order_items.each do |order_item| %>
				  <% sum_all += order_item.quantity %>
				<% end %>
				<%= sum_all %>
			</td>
			<td><%= order.status %></td>
		</tr>
		<% end %>
	</tbody>
</table>
