<div class="row">
  <h2>Sign up</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "admin/admins/shared/error_messages", resource: resource %>
  <div class="row" style="font-size: 18px; margin: 20px 0;">
      <div class="col-lg-1"></div>
      <div class="col-lg-10">
        <div class="field row" style="margin-bottom: 20px">
          <%= f.label :メールアドレス, class: "col-lg-3"  %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field row" style="margin-bottom: 20px">
          <%= f.label :パスワード, class: "col-lg-3"  %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上で入力してください)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field row" style="margin-bottom: 20px">
          <%= f.label :パスワード（確認用）, class: "col-lg-3"  %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
      <div class="col-lg-1"></div>
  </div>
  <div class="row">
        <div class="actions col-lg-6" style="text-align: center;">
          <%= f.submit "Sign up", class: "btn-lg btn-success" %>
        </div>
  </div>
<% end %>
