<h3>ショッピングカート</h3>

<%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete, class: "btn btn-danger btn-xs" %>

<table border="1">
	<thead>
		<tr>
			<th>商品名</th>
			<th>単価（税込）</th>
			<th>数量</th>
			<th>小計</th>
			<th colspan=""></th>
		</tr>
	</thead>
　　<% sum_all = 0 %>
	<% @cart_items.each do |cart_item| %>
	<tbody>
		<tr>
			<td><%= cart_item.product.name %></td>
			<td><%= price_include_tax(cart_item.product.price) %></td>
			<td>
				<%= form_with model: cart_item, local: true do |f| %>
				<%= f.number_field :quantity, value: cart_item.quantity, min:1, max:99 %>
				<%= f.submit "変更", class: "btn btn-primary btn-xs"%>
				<% end %>
			</td>
			<td><%= sum_product = price_include_tax(cart_item.product.price ).to_i * cart_item.quantity %>円
				<% sum_all += sum_product %>
			</td>
			<td><%= link_to '削除', cart_item_path(cart_item), method: :delete, class: "btn btn-danger btn-xs" %></td>

		</tr>
	</tbody>
	<% end %>

</table>


	<%= link_to '買い物を続ける', products_path, class: "btn btn-primary btn-sm" %>
	<h4>合計金額：<%= sum_all %>円</h4>
	<%= link_to '情報入力に進む', new_order_path, class: "btn btn-success" %>

